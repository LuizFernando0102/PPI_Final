<%- include('../layout') -%>
<div class="container mt-4">
  <% if (pacientes.length === 0) { %>
    <p>Lista de pacientes vazia</p>
  <% } else { %>
  <table class="table table-striped table-hover table-responsive">
    <thead>
      <tr>
        <th>CPF</th>
        <th>Nome</th>
        <th>Idade</th>
        <th>Dia da consulta</th>
        <th>Hora da consulta</th>
      </tr>
    </thead>
    <tbody>
      <% pacientes.forEach(paciente => { %>
        <tr>
          <td><%= paciente.cpf %></td>
          <td><%= paciente.nome_completo %></td>
          <td><%= paciente.idade %></td>
          <td><%= paciente.dia_consulta ? paciente.dia_consulta : 'Sem consulta agendada' %></td>
          <td><%= paciente.hora_consulta ? paciente.hora_consulta : 'Sem consulta agendada' %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% } %>
</div>
